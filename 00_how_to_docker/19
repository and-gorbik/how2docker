docker run --name Abathur -p 3000:3000 -v /Users/sjacelyn:/root python:2-slim
docker exec Abathur pip install flask
echo 'from flask import Flask\napp = Flask(__name__)\n@app.route("/")\ndef hello_world():\n\treturn "<h1>Hello, World!</h1>"\n' > ~/hello.py
echo 'if __name__ == "__main__":\n\tapp.run(host="0.0.0.0", port="3000")' >> ~/hello.py
docker exec Abathur python /root/hello.py
